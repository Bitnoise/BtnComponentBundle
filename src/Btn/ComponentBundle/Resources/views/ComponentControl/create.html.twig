{% import 'BtnAdminBundle:Macros:link.html.twig' as lnk %}
{% from 'BtnAdminBundle:Macros:breadcrumb.html.twig' import bcr %}
{% extends 'BtnAdminBundle::form.html.twig' %}

{% block breadcrumb %}
    {{ bcr({
            'btn_component_containercontrol_index': 'btn_component.container.list',
            component_list: {
                'route': 'btn_component_componentcontrol_list',
                'params': {'containerId': entity.container},
                'label': 'btn_component.component.list'
            },
            (app.request.attributes.get('_route')): 'btn_admin.create'
        })
    }}
{% endblock %}
{% block form_content %}
    {% set legend = 'btn_component.component.create'|trans({'%container_title%' : container.title}) %}
    {% include 'BtnComponentBundle:ComponentControl:_form.html.twig' with {form: form, legend: legend} only %}
{% endblock %}

{% block form_buttons %}
    {{ lnk.back('btn_component_componentcontrol_list', {containerId: entity.container}) }}
{% endblock %}
