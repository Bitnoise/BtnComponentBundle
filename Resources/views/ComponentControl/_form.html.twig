<form action="{{ form.vars.action }}" method="post" {{ form_enctype(form) }} class="form-horizontal" novalidate>
    <fieldset>
        <legend>{{ legend }}</legend>

        {% if form.visible is defined %}
            {{ form_row(form.visible) }}
        {% endif %}

        {% if form.title is defined %}
            {{ form_row(form.title) }}
        {% endif %}

        {% for parameterField in form.parameters|default([]) %}
            <div class="form-group">
                {{ form_label(parameterField, null, {label_attr: {class: 'col-sm-2 control-label'}}) }}
                <div class="col-sm-10">{{ form_widget(parameterField) }}</div>
            </div>
        {% endfor %}

        {{ form_rest(form) }}

    </fieldset>
</form>
