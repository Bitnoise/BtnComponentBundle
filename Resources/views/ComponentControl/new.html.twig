{% from 'BtnAdminBundle:Macros:link.html.twig' import link_back %}
{% extends 'BtnAdminBundle::base.html.twig' %}

{% block content %}

    {% set legend = 'btn_webplatform.component.create'|trans({'%container_title%' : container.title ?: container.name|trans}) %}
    {% include 'BtnWebplatformBundle:ComponentControl:_form.html.twig' with {form: form, legend: legend} only %}

    {{ link_back('btn_webplatform_componentcontrol_list', {container: component.container}) }}

{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/color.css') }}">
    {{ parent() }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/color.js') }}"></script>
    <script src="{{ asset('js/embeded.js') }}"></script>
{% endblock %}
