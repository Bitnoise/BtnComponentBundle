{% import 'BtnAdminBundle:Macros:link.html.twig' as lnk %}
{% extends 'BtnAdminBundle::base.html.twig' %}

{% block content %}

    {% set legend = 'btn_component.component.create'|trans({'%container_title%' : container.title ?: container.name|trans}) %}
    {% include 'BtnComponentBundle:ComponentControl:_form.html.twig' with {form: form, legend: legend} only %}

    {{ lnk.back('btn_component_componentcontrol_list', {container: component.container}) }}

{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/color.css') }}">
    {{ parent() }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/color.js') }}"></script>
    <script src="{{ asset('js/embeded.js') }}"></script>
{% endblock %}
