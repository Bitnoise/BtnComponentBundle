{% extends 'BtnWebplatformBundle::layout.html.twig' %}

{% block btn_webplatform_content %}
    <div class="page-header">
        <h1>{{ 'btn_webplatform.component.list'|trans({'%container_name%': container.name}) }}</h1>
    </div>

    <table class="table table-striped table-bordered table-condensed">
        <thead>
            <tr>
                <th class="btn-control-column-id">{{ 'component.id'|trans }}</th>
                <th>{{ 'btn_webplatform.component.title'|trans }}</th>
                {% if container.manageable %}
                    <th>{{ 'btn_webplatform.component.visible'|trans }}</th>
                {% endif %}
                <th>{% trans %}crud.actions{% endtrans %}</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in components %}
            <tr>
                <td class="btn-control-column-id">{{ entity.id }}</td>
                <td>{{ entity.title ?: entity.type|trans }}</td>
                {% if container.manageable %}
                    <td>{{ entity.visible ? '<span class="glyphicon glyphicon-ok"></span>' : '<span class="glyphicon glyphicon-remove"></span>' }}</td>
                {% endif %}
                <td>
                    {% if container.manageable or container.editable %}
                        <a href="{{ path('btn_webplatform_componentcontrol_edit', { 'id': entity.id }) }}" class="btn btn-primary">{% trans %}crud.edit{% endtrans %}</a>
                    {% endif %}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('btn_webplatform_containercontrol_index') }}" class="btn btn-default">&laquo; {% trans %}crud.back{% endtrans %}</a>

    {% if container.manageable %}
        <a href="{{ path('btn_webplatform_componentcontrol_new', {container: container.name}) }}" class="btn btn-primary">{% trans %}crud.create_new{% endtrans %}</a>
    {% endif %}

{% endblock %}
