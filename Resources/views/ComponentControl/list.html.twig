{% from 'BtnAdminBundle:Macros:icon.html.twig' import glyphicon as gi %}
{% import 'BtnAdminBundle:Macros:link.html.twig' as lnk %}
{% extends 'BtnAdminBundle::base.html.twig' %}

{% block content %}

    <div class="page-header">
        <h1>{{ 'btn_component.component.list'|trans({'%container_title%': container.title ?: container.name|trans }) }}</h1>
    </div>

    <table class="table table-striped table-bordered table-condensed">
        <thead>
            <tr>
                <th class="btn-admin-column-id">{{ 'btn_component.component.id'|trans }}</th>
                <th>{{ 'btn_component.component.title'|trans }}</th>
                {% if container.manageable %}
                    <th>{{ 'btn_component.component.visible'|trans }}</th>
                {% endif %}
                <th>{% trans %}btn_admin.actions{% endtrans %}</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in components %}
            <tr>
                <td class="btn-admin-column-id">{{ entity.id }}</td>
                <td>{{ entity.title ?: entity.type|trans }}</td>
                {% if container.manageable %}
                    <td>{{ entity.visible ? gi('ok') : gi('remove') }}</td>
                {% endif %}
                <td>
                    {% if container.manageable or container.editable %}
                        {{ lnk.edit('btn_component_componentcontrol_edit', { id: entity.id }) }}
                    {% endif %}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {{ lnk.back('btn_component_containercontrol_index') }}

    {% if container.manageable %}
        {{ lnk.add('btn_component_componentcontrol_new', {container: container.name}) }}
    {% endif %}

{% endblock %}
