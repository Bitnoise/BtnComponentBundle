{% from 'BtnAdminBundle:_macros:link.html.twig' import link_primary, link_back, link_add, link_edit, link_show %}
{% extends 'BtnAdminBundle::base.html.twig' %}

{% block content %}

    <div class="page-header">
        <h1>{{ 'btn_webplatform.container.list'|trans }}</h1>
    </div>

    <table class="table table-striped table-bordered table-condensed">
        <thead>
            <tr>
                <th>{{ 'btn_webplatform.container.name'|trans }}</th>
                <th>{% trans %}btn_admin.actions{% endtrans %}</th>
            </tr>
        </thead>
        <tbody>
        {% for container in containers %}
            {% if container.editable %}
                <tr>
                    <td>{{ container.title ?: container.name|trans }}</td>
                    <td>
                        {{ link_primary('btn_webplatform.container.components', 'btn_webplatform_componentcontrol_list', { container: container.name }) }}
                        {% if container.id|default(null) %}
                            {{ link_edit('btn_webplatform_containercontrol_edit', { id: container.id }) }}
                        {% endif %}
                    </td>
                </tr>
            {% endif %}
        {% endfor %}
        </tbody>
    </table>

    {% if manageable %}
        {{ link_add('btn_webplatform_containercontrol_new') }}
    {% endif %}

{% endblock %}
