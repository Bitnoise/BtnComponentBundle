{% extends 'BtnAdminBundle::base.html.twig' %}

{% block content %}

    <div class="page-header">
        <h1>{{ 'btn_webplatform.container.list'|trans }}</h1>
    </div>

    <table class="table table-striped table-bordered table-condensed">
        <thead>
            <tr>
                <th>{{ 'btn_webplatform.container.name'|trans }}</th>
                <th>{% trans %}crud.actions{% endtrans %}</th>
            </tr>
        </thead>
        <tbody>
        {% for container in containers %}
            {% if container.editable %}
                <tr>
                    <td>{{ container.title ?: container.name|trans }}</td>
                    <td>
                        <a href="{{ path('btn_webplatform_componentcontrol_list', { 'container': container.name }) }}" class="btn btn-primary">{% trans %}btn_webplatform.container.show_components{% endtrans %}</a>
                        {% if container.id|default(null) %}
                            <a href="{{ path('btn_webplatform_containercontrol_edit', { 'id': container.id }) }}" class="btn btn-primary">{% trans %}crud.edit{% endtrans %}</a>
                        {% endif %}
                    </td>
                </tr>
            {% endif %}
        {% endfor %}
        </tbody>
    </table>

    {% if manageable %}
        <a href="{{ path('btn_webplatform_containercontrol_new') }}" class="btn btn-primary">{% trans %}crud.create_new{% endtrans %}</a>
    {% endif %}

{% endblock %}
