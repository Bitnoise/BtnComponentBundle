{% import 'BtnAdminBundle:Macros:link.html.twig' as lnk %}
{% extends 'BtnAdminBundle::base.html.twig' %}

{% block content %}

    <div class="page-header">
        <h1>{{ 'btn_component.container.list'|trans }}</h1>
    </div>

    <table class="table table-striped table-bordered table-condensed">
        <thead>
            <tr>
                <th>{{ 'btn_component.container.name'|trans }}</th>
                <th>{% trans %}btn_admin.actions{% endtrans %}</th>
            </tr>
        </thead>
        <tbody>
        {% for container in containers %}
            {% if container.editable %}
                <tr>
                    <td>{{ container.title ?: container.name|trans }}</td>
                    <td>
                        {{ lnk.primary('btn_component.container.components', 'btn_component_componentcontrol_list', { container: container.name }) }}
                        {% if container.id|default(null) %}
                            {{ lnk.edit('btn_component_containercontrol_edit', { id: container.id }) }}
                        {% endif %}
                    </td>
                </tr>
            {% endif %}
        {% endfor %}
        </tbody>
    </table>

    {% if manageable %}
        {{ lnk.add('btn_component_containercontrol_new') }}
    {% endif %}

{% endblock %}
