{% extends 'BtnWebplatformBundle::layout.html.twig' %}

{% block btn_webplatform_content %}

    <div class="page-header">
        <h1>{{ 'btn_webplatform.container.list'|trans }}</h1>
    </div>

    <table class="table table-striped table-bordered table-condensed">
        <thead>
            <tr>
                <th>{{ 'btn_webplatform.container.name'|trans }}</th>
                <th>{% trans %}crud.actions{% endtrans %}</th>
            </tr>
        </thead>
        <tbody>
        {% for key, container in containers %}
            {% if container.editable %}
                <tr>
                    <td>{{ container.title ?: container.name|trans }}</td>
                    <td>
                        <a href="{{ path('btn_webplatform_componentcontrol_list', { 'container': key }) }}" class="btn btn-primary">{% trans %}crud.edit{% endtrans %}</a>
                    </td>
                </tr>
            {% endif %}
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('btn_webplatform_containercontrol_new') }}" class="btn btn-primary">{% trans %}crud.create_new{% endtrans %}</a>

{% endblock %}
